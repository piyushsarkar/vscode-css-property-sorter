{
  "name": "sort-css-properties",
  "displayName": "Sort CSS",
  "description": "Sort CSS Properties",
  "publisher": "piyushsarkar",
  "author": "Piyush Sarkar",
  "license": "MIT",
  "version": "0.1.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/piyushsarkar/vscode-css-property-sorter.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:less",
    "onLanguage:html",
    "onLanguage:vue",
    "onLanguage:svelte",
    "onLanguage:astro"
  ],
  "icon": "images/icon.png",
  "browser": "./dist/extension.js",
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/test/suite/extensionTests.js",
    "pretest": "pnpm run compile",
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node --experimental-strip-types esbuild.ts",
    "watch-web": "npm-run-all -p watch-web:*",
    "watch-web:esbuild": "node --experimental-strip-types esbuild.ts --watch",
    "watch-web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node --experimental-strip-types esbuild.ts --production",
    "create-package": "pnpx @vscode/vsce package",
    "check-types": "tsc --noEmit",
    "lint": "oxlint",
    "format": "prettier --write src/",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "contributes": {
    "commands": [
      {
        "category": "Sort CSS",
        "command": "sortcss.run",
        "title": "Run"
      },
      {
        "category": "Sort CSS",
        "command": "toggle-sort-on-save",
        "title": "Toggle sort on save"
      }
    ],
    "keybindings": [
      {
        "key": "Alt+s",
        "command": "sortcss.run",
        "when": "editorLangId == 'css' || editorLangId == 'scss' || editorLangId == 'less' || editorLangId == 'html' || editorLangId == 'vue' || editorLangId == 'svelte' || editorLangId == 'astro'"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CSS - Sort CSS",
      "properties": {
        "sortcss.sortOnSave": {
          "order": 0,
          "type": "boolean",
          "default": false,
          "description": "Sort the CSS properties on save."
        },
        "sortcss.sortingStrategy": {
          "order": 1,
          "type": "string",
          "enumItemLabels": [
            "Concentric CSS",
            "Alphabetical",
            "SMACSS",
            "Manual"
          ],
          "enum": [
            "concentric-css",
            "alphabetical",
            "smacss",
            "manual"
          ],
          "enumDescriptions": [
            "Order properties applying outside the box model, moving inward to intrinsic changes.",
            "Order in a simple alphabetical manner from a - z.",
            "Order from most important, flow affecting properties, to least important properties."
          ],
          "default": "concentric-css",
          "description": "CSS sorting orders"
        },
        "sortcss.ignoredFiles": {
          "order": 2,
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Files to ignore",
          "markdownDescription": "Ignore files or path. Example: `[ 'sample.css', 'src' ]`"
        },
        "sortcss.manualOrder": {
          "order": 3,
          "type": "array",
          "default": [],
          "items": {
            "type": "string",
            "enum": [
              "all",
              "display",
              "position",
              "grid",
              "flex",
              "order",
              "float",
              "columns",
              "page",
              "transform",
              "translate",
              "rotate",
              "scale",
              "perspective",
              "perspective-origin",
              "appearance",
              "visibility",
              "opacity",
              "mask",
              "filter",
              "animation",
              "transition",
              "cursor",
              "box-sizing",
              "contain",
              "container",
              "margin",
              "inset",
              "outline",
              "box-shadow",
              "border",
              "background",
              "padding",
              "aspect-ratio",
              "width",
              "height",
              "overflow",
              "color",
              "font"
            ]
          },
          "markdownDescription": "Manual CSS sorting order "
        }
      }
    }
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/assert": "^1.5.11",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.0",
    "@types/postcss-less": "^4.0.6",
    "@types/vscode": "^1.104.0",
    "@vscode/test-web": "^0.0.73",
    "assert": "^2.1.0",
    "css-declaration-sorter": "^7.2.0",
    "esbuild": "^0.25.9",
    "glob": "^11.0.3",
    "mocha": "^11.7.2",
    "npm-run-all": "^4.1.5",
    "oxlint": "^1.15.0",
    "postcss": "^8.5.6",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
